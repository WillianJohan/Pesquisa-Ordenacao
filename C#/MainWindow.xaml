<Window x:Class="Projeto_PesquisaOrdenacao_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_PesquisaOrdenacao_WPF"
        mc:Ignorable="d"        
        
            
    Title="MainWindow" Height="650" Width="1350">
    <Grid>

        <!-- Define a divisória dos botoes com o conteudo das telas-->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <!-- Definição dos Botoes para as telas principais-->
        <Button x:Name="button_Ordenacao" Content="ORDENAÇÃO" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,670,0" Click="Ordenacao_ButtonClicked"/>
        <Button x:Name="button_Pesquisa" Content="PESQUISA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="670,0,0,0" Click="Pesquisa_ButtonClicked"/>

        <!-- Telas -->
        <TabControl 
            x:Name="Tabs"
            Background="{x:Null}" BorderThickness="0" Margin="0,0,0,21" Grid.Row="1" Grid.ColumnSpan="2"           
            >
            <!-- ORDENACAO -->
            <!-- TELA PRINCIPAL -->
            <TabItem IsEnabled="True" Margin="0,4,0,0">
                <Grid>
                    <!-- Definicao das divisorias dentro da Tab-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="310*"/>
                        <RowDefinition Height="249*"/>
                    </Grid.RowDefinitions>

                    <!-- Definicao dos Botoes -->
                    <Button Content="Setup Ordenação" FontSize="34" Margin="150,221,150,0" Click="SetupOrdenacao_ButtonClick" Grid.ColumnSpan="2"/>
                    <Button Content="Históricos" FontSize="24" Margin="150,0,0,0" Grid.Row="1" Height="39" VerticalAlignment="Top" Click="Historico_ButtonClick"/>
                    <Button Content="Gráfico" FontSize="24" Margin="0,0,150,0" Grid.Column="1" Grid.Row="1" Height="39" VerticalAlignment="Top" Click="Grafico_ButtonClick"/>
                </Grid>
            </TabItem>

            <!-- Setup Ordenacao -->
            <TabItem IsEnabled="True" Margin="0,4,0,0">
                <Grid>
                    <Label Content="Digite a Quantidade de Números Para Ordenar: " FontSize="18" HorizontalAlignment="Left" Height="36" Margin="10,24,0,0" VerticalAlignment="Top" Width="406"/>
                    <TextBox x:Name="N_ToGenerate" Height="36" Margin="421,24,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Text="1000000" FontSize="18" Width="129" HorizontalAlignment="Left" TextChanged="OnlyNumbers_KeyUp" VerticalAlignment="Top"/>
                    <Button Content="Gerar Numeros e Ordenar!" FontSize="18" HorizontalAlignment="Left" Height="53" Margin="470,496,0,0" VerticalAlignment="Top" Width="394" Click="Button_GerarNumerosOrdenar"/>
                    <CheckBox x:Name="cb_SelectionSort" IsChecked="True" Content="SelectionSort" FontSize="18" Margin="428,218,710,303" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_InsertionSort" IsChecked="True" Content="InsertionSort" FontSize="18" Margin="428,174,710,347" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_BubbleSort" IsChecked="True" Content="BubbleSort" FontSize="18" Margin="428,262,710,259" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_ShakeSort" IsChecked="True" Content="ShakeSort" FontSize="18" Margin="428,306,710,215" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_CombSort" IsChecked="True" Content="CombSort" FontSize="18" Margin="632,262,506,259" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_MergeSort" IsChecked="True" Content="Merge Sort" FontSize="18" Margin="632,174,506,347" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_ShellSort" IsChecked="True" Content="Shell Sort" FontSize="18" Margin="632,218,506,303" RenderTransformOrigin="1.826,-3.103"/>
                    <CheckBox x:Name="cb_QuickSort" IsChecked="True" Content="Quick Sort" FontSize="18" Margin="632,306,506,215" RenderTransformOrigin="1.826,-3.103"/>
                </Grid>
            </TabItem>
            <!-- Historico -->
            <TabItem IsEnabled="True" Margin="0,4,0,0">
                <Grid>

                </Grid>
            </TabItem>
            <!-- Grafico -->
            <TabItem IsEnabled="True" Margin="0,4,0,0">
                <Grid>

                </Grid>
            </TabItem>

            <!-- Ordenando -->
            <TabItem IsEnabled="True" Margin="0,4,0,0">
                <Grid>
                    <Label x:Name="lbl_TitleOrdenando" Content="ORDENANDO! (4/8)" FontSize="40" HorizontalAlignment="Center" Height="60" VerticalAlignment="Center" Width="366" Margin="487,94,485,405"/>
                    <Label Content="Metodo em execução:" HorizontalAlignment="Left" Height="26" Margin="487,159,0,0" VerticalAlignment="Top" Width="130"/>
                    <Label x:Name="lbl_MetodoEmExecucao" Content="Selection Sort" HorizontalAlignment="Left" Height="26" Margin="617,159,0,0" VerticalAlignment="Top" Width="236"/>
                    <ProgressBar x:Name="barraProgresso" HorizontalAlignment="Left" Height="20" Margin="487,195,0,0" VerticalAlignment="Top" Width="366"/>
                    <TextBlock x:Name="txtBlock_ListaProgresso" HorizontalAlignment="Left" Height="187" Margin="487,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366"/>
                    <Button x:Name="button_VerEstatisticas" IsEnabled="False" Content="Ver Estatísticas" HorizontalAlignment="Left" Height="33" Margin="487,412,0,0" VerticalAlignment="Top" Width="366"/>
                </Grid>
            </TabItem>

            <!-- PESQUISA -->
            <TabItem IsEnabled="True" Margin="0,4,0,0">
                <Grid>
                    <TextBox x:Name="MyTxtBox" HorizontalAlignment="Left" FontSize="18" Margin="10,169,0,10" TextWrapping="Wrap" AcceptsReturn="True" Text="Escreva seu texto Aqui!" Width="1318" TextChanged="TextBox_TextChanged" AcceptsTab="True"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="18" Height="33" Margin="97,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="994" TextChanged="Pesquisa_TextChanged"/>
                    <Label Content="Pesquisa" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="38" Margin="10,126,0,0" VerticalAlignment="Top" Width="82" FontSize="18"/>
                    <Label Content="Digite o texto e pesquise o que desejar!" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="23.5,10,122,-66" VerticalAlignment="Top" Width="1082" Height="90" FontSize="40" Grid.ColumnSpan="2" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
